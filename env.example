# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=prisma
POSTGRES_PASSWORD=prisma
POSTGRES_DB=mydb
POSTGRES_PORT=5432

# ============================================
# Backend Configuration
# ============================================
NODE_ENV=production
PORT=3000
BACKEND_PORT=3000

# JWT Secret Key (ОБЯЗАТЕЛЬНО измените в production!)
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET=your-secret-key-change-in-production-min-32-chars

# Frontend URL (для CORS)
FRONTEND_URL=https://your-domain.com

# CORS Allowed Origins (разделенные запятыми, без пробелов)
# Пример: http://localhost:5173,https://localhost:8443,http://localhost:3000,http://localhost:8080,http://192.168.1.39:8443
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://localhost:8443,http://localhost:3000,http://localhost:8080

# Frontend Development URL (для локальной разработки)
FRONTEND_DEV_URL=http://localhost:5173

# Frontend Production URL (для production сборки)
FRONTEND_PROD_URL=https://localhost:8443

# Backend Development URL (для локальной разработки фронтенда)
BACKEND_DEV_URL=http://localhost:3000

# Database URL
# Для локального подключения (когда БД в Docker):
DATABASE_URL=postgresql://prisma:prisma@localhost:5432/mydb?schema=public
# Для подключения внутри Docker контейнера:
# DATABASE_URL=postgresql://prisma:prisma@postgres:5432/mydb?schema=public

# ============================================
# Frontend Configuration
# ============================================
# Основной API URL (приоритет 1)
VITE_API_URL=https://your-domain.com

# URL для разработки (приоритет 2, если VITE_API_URL не задан)
VITE_BACKEND_DEV_URL=http://localhost:3000
VITE_FRONTEND_DEV_URL=http://localhost:5173

# URL для production (приоритет 2, если VITE_API_URL не задан)
VITE_FRONTEND_PROD_URL=https://localhost:8443

# ============================================
# Port Configuration
# ============================================
HTTP_PORT=80
HTTPS_PORT=443

# ============================================
# Email Configuration (для отправки писем)
# ============================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# Альтернативные имена (для обратной совместимости)
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@your-domain.com

# ============================================
# Super Admin Configuration (для начальной настройки)
# ============================================
SUPER_ADMIN_EMAIL=superadmin@your-domain.com
SUPER_ADMIN_PASSWORD=SuperAdmin123!

# ============================================
# Примечания:
# ============================================
# 1. Скопируйте этот файл в .env: cp env.example .env
# 2. Замените все значения на реальные
# 3. НИКОГДА не коммитьте .env файл в git!
# 4. Для Gmail используйте "Пароль приложения", а не обычный пароль
# 5. SECRET_KEY должен быть длинным случайным строкой (минимум 32 символа)

